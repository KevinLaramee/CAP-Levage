<odoo>
    <data>
        <!--        Affiche la page mes matériels dans le fil d'ariane-->
        <template id="caplevage_my_materiels" name="caplevage_my_materiels" inherit_id="portal.portal_breadcrumbs" priority="30">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'mes_materiels'" class="breadcrumb-item" t-attf-class="breadcrumb-item active">
                    <a href="/cap_levage_portal/materiels" aria-label="Mes matériels" title="Mes mtériels">
                        <span>Mes matériels</span>
                    </a>
                </li>
                <li t-if="materiel" class="breadcrumb-item active">
                    <a t-att-href="'/cap_levage_portal/materiel/detail/' + str(materiel.id)">
                        <t t-esc="materiel.num_materiel"/>
                    </a>
                </li>
            </xpath>
        </template>

        <template id="cap_levage_portal.etat_materiel">
            <a t-field="materiel.statut"
               t-attf-style="color:white;background-color:#{'#15CA16' if (materiel.statut_index == 0) else '#FF8e60' if (materiel.statut_index == 1) else '#e6332a' if (materiel.statut_index == 2) else '#000000' if (materiel.statut_index == 3) else 'None'}"/>
        </template>
        <template id="cap_levage_portal.materiel_type">
            <a t-field="materiel.category_id" class="font-weight-bold"/>
        </template>
        <template id="cap_levage_portal.date_controle">
            <a>Prochaine date de contrôle :</a>
            <a t-field="materiel.audit_suivant" t-attf-style="color:#{materiel.audit_suivant_color}"/>
        </template>

        <!--        Page principale listant les matériels -->
        <template id="index">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <div groups="certification.website_lvl_1">
                    <!--                        Affiche la barre de recherche-->
                    <t t-set="breadcrumbs_searchbar" t-value="True"/>
                    <t t-call="portal.portal_searchbar">
                    </t>
                    <!--                    bouton de création -->
                    <a href="'/cap_levage_portal/materiel/create/'" class="btn btn-secondary" aria-label="Créer" title="Créer"
                       groups="certification.website_lvl_3">
                        <i class="fa fa-plus"/>
                    </a>
                    <!--                    Affiche la liste des matériels-->
                    <div class="row o_wsale_products_main_row">
                        <div t-if="enable_left_column" id="products_grid_before" class="col-lg-3"/>
                        <div id="products_grid">
                            <div t-if="bins" class="o_wsale_products_grid_table_wrapper">
                                <table class="table table-borderless m-0" t-att-data-ppg="ppg" t-att-data-ppr="ppr">
                                    <colgroup t-ignore="true">
                                        <!-- Force the number of columns (useful when only one row of (x < ppr) products) -->
                                        <col t-foreach="ppr" t-as="p"/>
                                    </colgroup>
                                    <tbody>
                                        <tr t-foreach="bins" t-as="tr_materiel">
                                            <t t-foreach="tr_materiel" t-as="td_materiel">
                                                <t t-if="td_materiel">
                                                    <t t-set="materiel" t-value="td_materiel['item']"/>
                                                    <td t-att-colspan="td_materiel['x'] != 1 and td_materiel['x']"
                                                        t-att-rowspan="td_materiel['y'] != 1 and td_materiel['y']"
                                                        t-attf-class="oe_product #{td_materiel['class']}">
                                                        <div t-attf-class="o_wsale_product_grid_wrapper o_wsale_product_grid_wrapper_#{td_materiel['x']}_#{td_materiel['y']}">
                                                            <t t-call="cap_levage_portal.materiel_infos"/>
                                                        </div>
                                                    </td>
                                                </t>
                                                <td t-else=""/>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <t t-else="">
                                <div class="text-center text-muted">
                                    <t t-if="not search">
                                        <h3 class="mt8">Aucun matériel</h3>
                                    </t>
                                    <t t-else="">
                                        <h3 class="mt8">Aucun résultat</h3>
                                        <p>Aucun résultat pour la recherche : "<strong t-esc='search'/>"
                                        </p>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!--                        Affiche la pagination-->
                    <div class="products_pager form-inline justify-content-center mt-3">
                        <t t-call="portal.pager"/>
                    </div>
                </div>
            </t>
        </template>

        <!--        Affiche l'encart d'un matériel dans la liste -->
        <template id="cap_levage_portal.materiel_infos">
            <t t-set="product_href" t-value="'/cap_levage_portal/materiel/detail/' + str(materiel.id)"/>
            <div class="card oe_product_cart" groups="certification.website_lvl_1" t-attf-onclick="location.href='#{product_href}';"
                 style="cursor: pointer">
                <div class="card-body p-1">
                    <a class="d-block h-100">
                        <span t-field="materiel.image_medium"
                              t-options="{'widget': 'image', 'class': 'o_image_128_max'}"
                              class="d-flex h-100 justify-content-center align-items-center"/>
                    </a>
                </div>
                <div class="card-body p-0 text-center o_wsale_product_information">
                    <div class="p-2 o_wsale_product_information_text">
                        <h6 class="o_wsale_products_item_title">
                            <a itemprop="name" t-att-content="materiel.category_id" t-field="materiel.category_id"/>
                        </h6>
                        <div>
                            <t t-call="cap_levage_portal.etat_materiel"/>
                        </div>
                        <div class="small text-left">
                            <a>Numéro :</a>
                            <a t-field="materiel.num_materiel" class="font-weight-bold"/>
                        </div>
                        <div class="small text-left">
                            <a>QRCode :</a>
                            <a t-field="materiel.qr_code" class="font-weight-bold"/>
                        </div>
                        <div class="small text-left">
                            <t t-call="cap_levage_portal.date_controle"/>
                        </div>
                        <div class="small text-left">
                            <a>Equipe :</a>
                            <a t-field="materiel.equipe_id.name"/>
                        </div>
                        <div class="small text-left">
                            <a>Agence/secteur :</a>
                            <a t-field="materiel.agence_id.name"/>
                        </div>
                    </div>
                </div>
            </div>
        </template>

        <!--        détail des différents onglets-->
        <template id="cap_levage_portal.onglet_caracteristiques">
            <div class="col-12">
                <div class="row align-items-center">
                    <a>Type :</a>
                    <t t-call="cap_levage_portal.materiel_type"/>
                </div>
                <div class="row align-items-center">
                    <a>Fabricant :</a>
                    <a t-field="materiel.fabricant_id"/>
                </div>
                <div t-if="materiel.display_nombre_brins" class="row align-items-center">
                    <a>Nombre de brins :</a>
                    <a t-field="materiel.nombre_brins"/>
                </div>
                <div t-if="materiel.display_longueur" class="row align-items-center">
                    <a>Longueur (ml) :</a>
                    <a t-field="materiel.longueur"/>
                </div>
                <div t-if="materiel.display_cmu" class="row align-items-center">
                    <a>CMU (tonnes) :</a>
                    <a t-field="materiel.cmu"/>
                </div>
                <div t-if="materiel.display_tmu" class="row align-items-center">
                    <a>TMU (daN) :</a>
                    <a t-field="materiel.tmu"/>
                </div>
                <div t-if="materiel.display_model" class="row align-items-center">
                    <a>Modèle matériel :</a>
                    <a t-field="materiel.model"/>
                </div>
                <div t-if="materiel.display_diametre" class="row align-items-center">
                    <a>Diamètre (mm) :</a>
                    <a t-field="materiel.diametre"/>
                </div>
                <div t-if="materiel.display_grade" class="row align-items-center">
                    <a>Grade :</a>
                    <a t-field="materiel.grade"/>
                </div>
                <div t-if="materiel.display_num_lot" class="row align-items-center">
                    <a>Numéro de lot :</a>
                    <a t-field="materiel.num_lot"/>
                </div>
                <div t-if="materiel.display_num_commande" class="row align-items-center">
                    <a>Numéro de commande :</a>
                    <a t-field="materiel.num_commande"/>
                </div>
            </div>
        </template>
        <template id="cap_levage_portal.onglet_suivi">
            <div class="col-12">
                <div class="row align-items-center">
                    <a>Organisme de certification :</a>
                    <a t-field="materiel.organisme_id"/>
                </div>
                <div class="row align-items-center">
                    <a>Date de fabrication :</a>
                    <a t-field="materiel.date_fabrication"/>
                </div>
                <div class="row align-items-center">
                    <a>Date de mise en service :</a>
                    <a t-field="materiel.an_mise_service"/>
                </div>
                <div class="row align-items-center">
                    <a>Date dernier contrôle :</a>
                    <a t-field="materiel.date_dernier_audit"/>
                </div>
                <div class="row align-items-center">
                    <t t-call="cap_levage_portal.date_controle"/>
                </div>
            </div>
        </template>
        <template id="cap_levage_portal.onglet_vgp">
            <div class="o_portal_my_home">
                <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                <div class="o_portal_docs list-group">
                    <t t-if="onglet_vgp.get('nb_certificats_fabrication')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Certificats de fabrication CE</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/certificats/fabrication/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_vgp.get('nb_certificats_fabrication')"/>
                    </t>
                    <t t-if="onglet_vgp.get('nb_vgp')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Rapport de VGP</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/vgp/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_vgp.get('nb_vgp')"/>
                    </t>
                    <t t-if="onglet_vgp.get('nb_certificats_destruction')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Certificats de destruction</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/certificats/destruction/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_vgp.get('nb_certificats_destruction')"/>
                    </t>
                    <t t-if="onglet_vgp.get('nb_certificats_controle')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Certificats de contrôle</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/certificats/controle/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_vgp.get('nb_certificats_controle')"/>
                    </t>
                </div>
            </div>
            <div class="oe_structure" id="oe_structure_portal_my_home_2"/>
        </template>
        <template id="cap_levage_portal.onglet_devis">
            <div class="o_portal_my_home">
                <div class="oe_structure" id="oe_structure_portal_my_home_1"/>
                <div class="o_portal_docs list-group">
                    <t t-if="onglet_devis.get('nb_devis')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Devis</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/devis/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_devis.get('nb_devis')"/>
                    </t>
                    <t t-if="onglet_devis.get('nb_bons_commande')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Bons de commande</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/boncommandes/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_devis.get('nb_bons_commande')"/>
                    </t>
                    <t t-if="onglet_devis.get('nb_factures')" t-call="portal.portal_docs_entry">
                        <t t-set="title">Factures</t>
                        <t t-set="url" t-value="'/cap_levage_portal/list/factures/' + str(materiel.id)"/>
                        <t t-set="count" t-value="onglet_devis.get('nb_factures')"/>
                    </t>
                </div>
            </div>
            <div class="oe_structure" id="oe_structure_portal_my_home_2"/>
        </template>

        <!--        Détail des caractéristiques principales-->
        <template id="cap_levage_portal.affichage_details_principaux">
            <h2 class="row align-items-center">
                <t t-call="cap_levage_portal.materiel_type"/>
            </h2>
            <div class="row align-items-center">
                <t t-call="cap_levage_portal.etat_materiel"/>
            </div>
            <br/>
            <div class="row align-items-center">
                <a>Numéro :</a>
                <a t-field="materiel.num_materiel" class="font-weight-bold"/>
            </div>
            <div class="row align-items-center">
                <a>Référent :</a>
                <a t-field="materiel.owner_user_id"/>
            </div>
            <div class="row align-items-center">
                <a>Agence/secteur :</a>
                <a t-field="materiel.agence_id.name"/>
            </div>
            <div class="row align-items-center">
                <a>Equipe :</a>
                <a t-field="materiel.equipe_id.name"/>
            </div>
            <div class="row align-items-center">
                <a>Identifiant QRCode :</a>
                <a t-field="materiel.qr_code"/>
            </div>
        </template>

        <template id="cap_levage_portal.materiel_toolbar">
            <div class="col-8"/>
            <div class="col-1" groups="certification.website_lvl_2">
                <a t-att-href="'/cap_levage_portal/materiel/edit/' + str(materiel.id)" class="btn btn-secondary"
                   aria-label="Editer" title="Editer">
                    <i class="fa fa-pencil"/>
                </a>
            </div>
        </template>
        <!--        Affiche le détail d'un matériel-->
        <template id="cap_levage_portal.materiel_detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <div class="panel mt-5" groups="certification.website_lvl_1">
                    <div class="row align-items-center">
                        <t t-call="cap_levage_portal.materiel_toolbar"/>
                    </div>
                    <div class="row align-items-center mt-5">
                        <div class="col-2">
                            <span t-field="materiel.image_medium" t-options="{'widget': 'image', 'class': 'o_image_128_max'}"/>
                        </div>
                        <div class="col-5">
                            <t t-call="cap_levage_portal.affichage_details_principaux"/>
                        </div>
                        <div class="col-5">
                            <div class="row align-items-center">
                                <t t-call="cap_levage_portal.date_controle"/>
                            </div>
                        </div>
                    </div>
                    <div class="row align-items-center mt-2">
                        <div class="col-2"/>
                        <div class="col-10" style="border-style: solid">
                            <a>Dernière observation générale :</a>
                            <a t-field="materiel.last_general_observation"/>
                        </div>
                    </div>
                    <div class="row align-items-center">
                        <div class="prodcut-tab-wrap w-100">
                            <div class="row align-items-center" id="product_more_info">
                                <div class="col-md-12 pd_info">
                                    <div class="pd-more-info">
                                        <ul class="nav nav-tabs" role="tablist">
                                            <li role="presentation">
                                                <a class="active" href="#caracteristiques_tab" aria-controls="caracteristiques_tab" role="tab"
                                                   data-toggle="tab">
                                                    Caractéristiques
                                                </a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#suivi_tab" aria-controls="suivi_tab" role="tab" data-toggle="tab">Suivi</a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#vgp_tab" aria-controls="vgp_tab" role="tab" data-toggle="tab"
                                                   groups="certification.website_lvl_2">Certificats/VGP
                                                </a>
                                            </li>
                                            <li role="presentation">
                                                <a href="#devis_tab" aria-controls="devis_tab" role="tab" data-toggle="tab"
                                                   groups="certification.website_lvl_2">Devis/factures
                                                </a>
                                            </li>
                                        </ul>
                                        <div class="tab-content">
                                            <div role="caracteristiques_tab" class="tab-pane active" id="caracteristiques_tab">
                                                <t t-call="cap_levage_portal.onglet_caracteristiques"/>
                                            </div>
                                            <div role="suivi_tab" class="tab-pane" id="suivi_tab">
                                                <t t-call="cap_levage_portal.onglet_suivi"/>
                                            </div>
                                            <div role="vgp_tab" class="tab-pane" id="vgp_tab" groups="certification.website_lvl_2">
                                                <t t-call="cap_levage_portal.onglet_vgp"/>
                                            </div>
                                            <div role="devis_tab" class="tab-pane" id="devis_tab" groups="certification.website_lvl_2">
                                                <t t-call="cap_levage_portal.onglet_devis"/>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>

        <!--    affiche la liste de certifcats/vgp du matériel -->
        <template id="cap_levage_portal.certifs_list">
            <t t-call="portal.portal_layout">
                <t t-if="not documents">
                    <p t-esc="emptymessage"/>
                </t>
                <div class="mt-5">
                    <t t-if="documents" t-call="portal.portal_table">
                        <thead>
                            <tr class="active">
                                <th>Description</th>
                                <th>Date</th>
                                <th class="text-right">Document</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="documents" t-as="doc">
                                <tr>
                                    <td>
                                        <span t-field="doc.desc"/>
                                    </td>
                                    <td>
                                        <span t-field="doc.date"/>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group flex-grow-1 mr-1 mb-1">
                                            <a t-if="doc.pdf" class="btn btn-secondary btn-block o_download_btn"
                                               t-att-href="doc.pdf" title="Download">
                                                <i class="fa fa-download"/>
                                            </a>
                                            <a t-if="doc.dl_pdf" class="btn btn-secondary btn-block o_download_btn"
                                               t-att-href="doc.dl_pdf" title="Download">
                                                <i class="fa fa-download"/>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </div>
            </t>
        </template>
        <template id="cap_levage_portal.vgp_list">
            <t t-call="portal.portal_layout">
                <t t-if="not documents">
                    <p t-esc="emptymessage"/>
                </t>
                <div class="mt-5">
                    <t t-if="documents" t-call="portal.portal_table">
                        <thead>
                            <tr class="active">
                                <th>Référence</th>
                                <th>Date</th>
                                <th class="text-right">Document</th>
                            </tr>
                        </thead>
                        <tbody>
                            <t t-foreach="documents" t-as="doc">
                                <tr>
                                    <td>
                                        <span t-field="doc.number"/>
                                    </td>
                                    <td>
                                        <span t-field="doc.create_date"/>
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group flex-grow-1 mr-1 mb-1">
                                            <a class="btn btn-secondary btn-block o_download_btn"
                                               t-att-href="doc.url" title="Download">
                                                <i class="fa fa-download"/>
                                            </a>
                                        </div>
                                    </td>
                                </tr>
                            </t>
                        </tbody>
                    </t>
                </div>
            </t>
        </template>

        <template id="cap_levageassets_frontend" inherit_id="website.assets_frontend" name="Portal Assets" priority="99">
            <xpath expr="//script[last()]" position="after">
                <script type="text/javascript" src="/cap_levage_portal/static/src/js/materielTypeSwitch.js"/>
            </xpath>
        </template>

        <template id="cap_levage_portal.custom_select">
            <label class="col-form-label">
                <t t-esc="labelValue"/>
            </label>
            <select t-att-name="idValue"
                    t-attf-class="form-control #{error.get(idValue) and 'is-invalid' or ''}">
                <option value="">
                    <t t-esc="noValueLabel"/>
                </option>
                <t t-foreach="listValue or []" t-as="item">
                    <option t-att-value="item.id"
                            t-att-selected="item.id == currentSelectedId if mode == 'edit' else 0">
                        <t t-esc="item.name"/>
                    </option>
                </t>
            </select>
        </template>
        <!--        affichage des champs dynamique en fonction des catégories, via le widget cap_levage_portal/static/src/js/materielTypeSwitch.js-->
        <template id="cap_levage_portal.dynamic_categories">
            <div t-att-id="'materiel_' + concernedAttr" t-attf-class="form-group #{error.get(concernedAttr) and 'o_has_error' or ''}">
                <label class="col-form-label">
                    <t t-esc="labelValue"/>
                </label>
                <input t-att-id="'materiel_input_' + concernedAttr" type="text" t-att-name="concernedAttr"
                       t-attf-class="form-control #{error.get(concernedAttr) and 'is-invalid' or ''}"
                       t-att-value="attrValue if mode == 'edit' else ''"/>
            </div>
        </template>
        <!-- Edition/création d'un matériel -->
        <template id="cap_levage_portal.materiel_edit">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <form id="materiel_edit_form" method="POST" enctype="multipart/form-data"
                      t-attf-action="/cap_levage_portal/materiel/edit/#{materiel.id}"
                      groups="certification.website_lvl_2">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="col-lg-12 mt-5">
                        <div t-if="error_message" class="alert alert-danger" role="alert">
                            <t t-foreach="error_message" t-as="err">
                                <t t-esc="err"/>
                                <br/>
                            </t>
                        </div>
                    </div>
                    <div class="panel">
                        <h3>Edition matériel</h3>
                        <div class="row align-items-center mt-5">
                            <div class="col-2" id="cap_levage_portal_avatar">
                                <input type="file" accept="image/*" name="image" t-options="{'widget': 'image', 'class': 'o_image_128_max'}"
                                       class="d-none cap_levage_portal_avatar_upload"/>
                                <img class="mb-3 cap_levage_portal_avatar_img"
                                     t-att-src="website.image_url(materiel, 'image_medium') if mode == 'edit' else ''"/>
                                <div class="text-left">
                                    <a href="#" class="btn btn-primary cap_levage_portal_avatar_edit" aria-label="Edit">
                                        <i class="fa fa-pencil fa-1g float-sm-none float-md-left" title="Edit"/>
                                    </a>
                                    <a href="#" title="Clear" aria-label="Clear" class="btn border-primary cap_levage_portal_avatar_clear">
                                        <i class="fa fa-trash-o float-sm-none float-md-right"/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-5">
                                <h2 class="row align-items-center">
                                    <t t-call="cap_levage_portal.materiel_type"/>
                                </h2>
                                <div class="row align-items-center">
                                    <t t-call="cap_levage_portal.etat_materiel"/>
                                </div>
                                <br/>
                                <div class="row form-group col-12">
                                    <t t-call="cap_levage_portal.custom_select">
                                        <t t-set="labelValue">Equipe - agence</t>
                                        <t t-set="idValue">equipe_id</t>
                                        <t t-set="currentSelectedId" t-value="materiel.equipe_id.id"/>
                                        <t t-set="listValue" t-value="equipes"/>
                                        <t t-set="noValueLabel">Sélectionner une équipe</t>
                                    </t>
                                </div>
                                <div class="row">
                                    <div t-attf-class="form-group #{error.get('num_materiel') and 'o_has_error' or ''} col-12">
                                        <label class="col-form-label" for="num_materiel">Numéro matériel</label>
                                        <input type="text" name="num_materiel"
                                               t-attf-class="form-control #{error.get('num_materiel') and 'is-invalid' or ''}"
                                               t-att-value="materiel.num_materiel if mode == 'edit' else ''"/>
                                    </div>

                                </div>
                                <div class="row form-group">
                                    <div class="form-group col-12">
                                        <label class="col-form-label" for="is_bloque">Est bloqué
                                            <input type="checkbox" name="is_bloque" class="form-control"
                                                   t-att-checked="'checked' if materiel.is_bloque and mode == 'edit' else False"
                                                   t-att-disabled="True if materiel.is_bloque or materiel.statut_index != 0 else False"/>
                                        </label>
                                    </div>

                                </div>
                                <div class="row">
                                    <div t-attf-class="form-group #{error.get('qr_code') and 'o_has_error' or ''} col-12">
                                        <label class="col-form-label" for="qr_code">Identifiant QRCode</label>
                                        <input type="text" name="qr_code" t-attf-class="form-control #{error.get('qr_code') and 'is-invalid' or ''}"
                                               t-att-value="materiel.qr_code if mode == 'edit' else ''"/>
                                    </div>
                                </div>
                                <div class="row form-group col-12">
                                    <t t-call="cap_levage_portal.custom_select">
                                        <t t-set="labelValue">Référent</t>
                                        <t t-set="idValue">referent</t>
                                        <t t-set="currentSelectedId" t-value="materiel.referent.id"/>
                                        <t t-set="noValueLabel">Sélectionner un référent</t>
                                        <t t-set="listValue" t-value="referents"/>
                                    </t>
                                </div>
                                <div class="col-5">
                                </div>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="col-2"/>
                            <div t-attf-class="form-group #{error.get('last_general_observation') and 'o_has_error' or ''} col-10">
                                <label class="col-form-label" for="last_general_observation">Dernière observation générale :</label>
                                <input type="text" name="last_general_observation"
                                       t-attf-class="form-control #{error.get('last_general_observation') and 'is-invalid' or ''}"
                                       t-att-value="materiel.last_general_observation if mode == 'edit' else ''"/>
                            </div>
                        </div>
                        <div class="row align-items-center">
                            <div class="prodcut-tab-wrap w-100">
                                <div class="row align-items-center" id="edit_product_more_info">
                                    <div class="col-md-12 pd_info">
                                        <div class="pd-more-info">
                                            <ul class="nav nav-tabs" role="tablist">
                                                <li role="presentation">
                                                    <a class="active" href="#edit_caracteristiques_tab" aria-controls="edit_caracteristiques_tab"
                                                       role="tab"
                                                       data-toggle="tab">
                                                        Caractéristiques
                                                    </a>
                                                </li>
                                                <li role="presentation">
                                                    <a href="#edit_suivi_tab" aria-controls="edit_suivi_tab" role="tab" data-toggle="tab">Suivi</a>
                                                </li>
                                                <li role="presentation">
                                                    <a href="#edit_vgp_tab" aria-controls="edit_vgp_tab" role="tab" data-toggle="tab"
                                                       groups="certification.website_lvl_2">Certificats/VGP
                                                    </a>
                                                </li>
                                                <li role="presentation">
                                                    <a href="#edit_devis_tab" aria-controls="edit_devis_tab" role="tab" data-toggle="tab"
                                                       groups="certification.website_lvl_2">Devis/factures
                                                    </a>
                                                </li>
                                            </ul>
                                            <div class="tab-content">
                                                <div role="caracteristiques_tab" class="tab-pane active" id="edit_caracteristiques_tab"
                                                     groups="certification.website_lvl_3">
                                                    <div class="row">
                                                        <div class="col-5">
                                                            <div class="row">
                                                                <label class="col-form-label">Type</label>
                                                                <select id="materiel_edit_category_select" name="category_id"
                                                                        t-attf-class="form-control #{error.get('category_id') and 'is-invalid' or ''}">
                                                                    <t t-foreach="categories_materiel or []" t-as="category_value">
                                                                        <option t-att-data-display_nombre_brins="'true' if category_value.display_nombre_brins else 'false'"
                                                                                t-att-data-display_longueur="'true' if category_value.display_longueur else 'false'"
                                                                                t-att-data-display_cmu="'true' if category_value.display_cmu else 'false'"
                                                                                t-att-data-display_tmu="'true' if category_value.display_tmu else 'false'"
                                                                                t-att-data-display_model="'true' if category_value.display_model else 'false'"
                                                                                t-att-data-display_diametre="'true' if category_value.display_diametre else 'false'"
                                                                                t-att-data-display_grade="'true' if category_value.display_grade else 'false'"
                                                                                t-att-data-display_num_lot="'true' if category_value.display_num_lot else 'false'"
                                                                                t-att-data-display_num_commande="'true' if category_value.display_num_commande else 'false'"
                                                                                t-att-value="category_value.id"
                                                                                t-att-selected="category_value.id == materiel.category_id.id if mode == 'edit' else 0">
                                                                            <t t-esc="category_value.name"/>
                                                                        </option>
                                                                    </t>
                                                                </select>
                                                            </div>
                                                            <div class="row">
                                                                <t t-call="cap_levage_portal.custom_select">
                                                                    <t t-set="labelValue">Fabricant</t>
                                                                    <t t-set="idValue">fabricant_id</t>
                                                                    <t t-set="currentSelectedId" t-value="materiel.fabricant_id.id"/>
                                                                    <t t-set="noValueLabel">Sélectionner un fabricant</t>
                                                                    <t t-set="listValue" t-value="fabricants"/>
                                                                </t>
                                                            </div>
                                                        </div>
                                                        <div class="col-5">
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">nombre_brins</t>
                                                                <t t-set="labelValue">Nombre de brins</t>
                                                                <t t-set="attrValue" t-value="materiel.nombre_brins"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">longueur</t>
                                                                <t t-set="labelValue">Longueur (ml)</t>
                                                                <t t-set="attrValue" t-value="materiel.longueur"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">cmu</t>
                                                                <t t-set="labelValue">CMU (tonnes)</t>
                                                                <t t-set="attrValue" t-value="materiel.cmu"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">tmu</t>
                                                                <t t-set="labelValue">TMU (daN)</t>
                                                                <t t-set="attrValue" t-value="materiel.tmu"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">model</t>
                                                                <t t-set="labelValue">Modèle matériel</t>
                                                                <t t-set="attrValue" t-value="materiel.model"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">diametre</t>
                                                                <t t-set="labelValue">Diamètre (mm)</t>
                                                                <t t-set="attrValue" t-value="materiel.diametre"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">grade</t>
                                                                <t t-set="labelValue">Grade</t>
                                                                <t t-set="attrValue" t-value="materiel.grade"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">num_lot</t>
                                                                <t t-set="labelValue">Numéro de lot</t>
                                                                <t t-set="attrValue" t-value="materiel.num_lot"/>
                                                            </t>
                                                            <t t-call="cap_levage_portal.dynamic_categories">
                                                                <t t-set="concernedAttr">num_commande</t>
                                                                <t t-set="labelValue">Numéro de commande</t>
                                                                <t t-set="attrValue" t-value="materiel.num_commande"/>
                                                            </t>
                                                        </div>
                                                    </div>
                                                </div>
                                                <div role="suivi_tab" class="tab-pane" id="edit_suivi_tab">
                                                    <t t-call="cap_levage_portal.onglet_suivi"/>
                                                </div>
                                                <div role="vgp_tab" class="tab-pane" id="edit_vgp_tab" groups="certification.website_lvl_2">
                                                </div>
                                                <div role="devis_tab" class="tab-pane" id="edit_devis_tab" groups="certification.website_lvl_2">
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                            <button type="submit" t-att-id="materiel.id if mode == 'edit' else ''" class="btn btn-primary">
                                <i class="fa fa-save"/>
                            </button>
                            <a t-att-href="'/cap_levage_portal/materiel/detail/' + str(materiel.id) if mode == 'edit' else '/cap_levage_portal/materiels'"
                               class="btn btn-danger"
                               aria-label="Annuler" title="Annuler">
                                <span class="fa fa-ban"/>
                            </a>
                        </div>
                    </div>
                </form>
            </t>
        </template>
    </data>
</odoo>
