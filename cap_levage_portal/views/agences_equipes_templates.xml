<odoo>
    <data>
        <!--        Affiche la page mes équipes dans le fil d'ariane-->
        <template id="caplevage_my_equipes" name="caplevage_my_equipes" inherit_id="portal.portal_breadcrumbs" priority="31">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'mes_equipes'" class="breadcrumb-item active">
                    <a href="/cap_levage_portal/equipes?sortby=name" aria-label="Equipes" title="Equipes">
                        <span>Mes équipes</span>
                    </a>
                </li>
                <li t-if="page_name == 'mes_agences'" class="breadcrumb-item active">
                    <a href="/cap_levage_portal/agences?sortby=name" aria-label="Agences" title="Agences">
                        <span>Mes agences</span>
                    </a>
                </li>
                <li t-if="page_name == 'mes_equipes' and equipe" class="breadcrumb-item active">
                    <a t-att-href="'/cap_levage_portal/equipe/detail/' + str(equipe.id)">
                        <t t-esc="equipe.name"/>
                    </a>
                </li>
                <li t-if="page_name == 'mes_agences' and agence" class="breadcrumb-item active">
                    <a t-att-href="'/cap_levage_portal/agence/detail/' + str(agence.id)">
                        <t t-esc="agence.name"/>
                    </a>
                </li>
            </xpath>
        </template>

        <template id="portal_my_home_menu_sale" name="Portal layout : sales menu entries" inherit_id="portal.portal_breadcrumbs" priority="20">
            <xpath expr="//ol[hasclass('o_portal_submenu')]" position="inside">
                <li t-if="page_name == 'quote' or sale_order and sale_order.state in ('sent', 'cancel')"
                    t-attf-class="breadcrumb-item #{'active ' if not sale_order else ''}">
                    <a t-if="sale_order" t-attf-href="/my/quotes?{{ keep_query() }}">Quotations</a>
                    <t t-else="">Quotations</t>
                </li>
                <li t-if="page_name == 'order' or sale_order and sale_order.state not in ('sent', 'cancel')"
                    t-attf-class="breadcrumb-item #{'active ' if not sale_order else ''}">
                    <a t-if="sale_order" t-attf-href="/my/orders?{{ keep_query() }}">Sales Orders</a>
                    <t t-else="">Sales Orders</t>
                </li>
                <li t-if="sale_order" class="breadcrumb-item active">
                    <span t-field="sale_order.type_name"/>
                    <t t-esc="sale_order.name"/>
                </li>
            </xpath>
        </template>

        <!--        FIXME renomer les variables equipes pour etre générique-->
        <!--        Page principale listant les équipes -->
        <template id="equipes_list">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <div class="container oe_website_sale">
                    <div class="products_pager form-inline flex-md-nowrap justify-content-between justify-content-md-center">
                        <!--                        Affiche la barre de recherche-->
                        <t t-call="portal.portal_searchbar">
                            <t t-set="title" t-value="' '"/>
                            <t t-set="_classes">w-100 w-md-auto mt-2</t>
                        </t>
                    </div>
                    <!--                    Affiche la liste des matériels-->
                    <div class="row o_wsale_products_main_row">
                        <div t-if="enable_left_column" id="products_grid_before" class="col-lg-3"/>
                        <div id="products_grid">
                            <div t-if="bins" class="o_wsale_products_grid_table_wrapper">
                                <table class="table table-borderless m-0" t-att-data-ppg="ppg" t-att-data-ppr="ppr">
                                    <colgroup t-ignore="true">
                                        <!-- Force the number of columns (useful when only one row of (x < ppr) products) -->
                                        <col t-foreach="ppr" t-as="p"/>
                                    </colgroup>
                                    <tbody>
                                        <tr t-foreach="bins" t-as="tr_item">
                                            <t t-foreach="tr_item" t-as="td_item">
                                                <t t-if="td_item">
                                                    <t t-set="item" t-value="td_item['item']"/>
                                                    <td t-att-colspan="td_item['x'] != 1 and td_item['x']"
                                                        t-att-rowspan="td_item['y'] != 1 and td_item['y']"
                                                        t-attf-class="oe_product #{td_item['class']}">
                                                        <div t-attf-class="o_wsale_product_grid_wrapper o_wsale_product_grid_wrapper_#{td_item['x']}_#{td_item['y']}">
                                                            <t t-call="cap_levage_portal.item_infos"/>
                                                        </div>
                                                    </td>
                                                </t>
                                                <td t-else=""/>
                                            </t>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                            <t t-else="">
                                <div class="text-center text-muted">
                                    <t t-if="not search">
                                        <h3 class="mt8">Aucune entrée</h3>
                                    </t>
                                    <t t-else="">
                                        <h3 class="mt8">Aucun résultat</h3>
                                        <p>Aucun résultat pour la recherche"<strong t-esc='search'/>"
                                        </p>
                                    </t>
                                </div>
                            </t>
                        </div>
                    </div>
                    <!--                        Affiche la pagination-->
                    <div class="products_pager form-inline justify-content-center mt-3">
                        <t t-call="portal.pager"/>
                    </div>
                </div>
            </t>
        </template>

        <!--        Affiche l'encart d'un matériel dans la liste -->
        <template id="cap_levage_portal.item_infos">
            <t t-set="product_href" t-value="'/cap_levage_portal/' + str(detail_url) + '/detail/' + str(item.id)"/>
            <!--            FIXME supprimer le form -->
            <div class="card oe_product_cart">
                <div class="card-body p-1 oe_product_image">
                    <a t-att-href="product_href" class="d-block h-100" itemprop="url">
                        <span t-if="item.type == 'contact'" t-field="item.image_1920"
                              t-options="{'widget': 'image', 'preview_image': 'image_1920'}"
                              class="d-flex h-100 justify-content-center align-items-center"/>
                        <span t-if="item.type == 'delivery'" t-field="item.parent_id.image_1920"
                              t-options="{'widget': 'image', 'preview_image': 'image_1920'}"
                              class="d-flex h-100 justify-content-center align-items-center"/>
                    </a>
                </div>
                <div class="card-body p-0 text-center o_wsale_product_information">
                    <div class="p-2 o_wsale_product_information_text">
                        <h6 class="o_wsale_products_item_title">
                            <a itemprop="name" t-att-href="product_href" t-att-content="item.name" t-field="item.name"/>
                        </h6>
                        <div>
                            <a t-field="item.email"/>
                        </div>
                    </div>
                </div>
            </div>
        </template>
        <template id="cap_levage_portal.agence_toolbar">
            <div class="col-8"/>
            <div class="col-1">
                <a href="/cap_levage_portal/materiels" class="btn btn-secondary"
                   aria-label="Editer" title="Editer">
                    <i class="fa fa-pencil"/>
                </a>
            </div>
            <div class="col-1">
                <a href="/cap_levage_portal/materiels" class="btn btn-secondary"
                   aria-label="Sauvegarder" title="Sauvegarder">
                    <i class="fa fa-floppy-o"/>
                </a>
            </div>
            <div class="col-1">
                <a href="/cap_levage_portal/materiels" class="btn btn-secondary"
                   aria-label="Supprimer" title="Supprimer">
                    <i class="fa fa-trash"/>
                </a>
            </div>
            <div class="col-1">
                <a t-att-href="'/cap_levage_portal/agence/detail/' + str(agence.id)" class="btn btn-secondary"
                   aria-label="Annuler" title="Annuler">
                    <i class="fa fa-ban"/>
                </a>
            </div>
        </template>
        <template id="cap_levage_portal.agence_champs_col_1">
            <div class="col-12">
                <div class="row">
                    <label>Nom :</label>
                    <a t-field="agence.name"/>
                </div>
                <div class="row">
                    <label>Adresse :</label>
                    <address t-esc="agence" t-options='{"widget": "contact", "fields": ["address"], "no_marker": True}'/>
                </div>
                <div class="row">
                    <label>Notes :</label>
                    <a t-field="agence.comment"/>
                </div>
            </div>
        </template>
        <template id="cap_levage_portal.agence_champs_col_2">
            <div class="col-12">
                <div class="row">
                    <label>Email :</label>
                    <a t-field="agence.email"/>
                </div>
                <div class="row">
                    <label>Téléphone :</label>
                    <a t-field="agence.phone"/>
                </div>
                <div class="row">
                    <label>Mobile :</label>
                    <a t-field="agence.mobile"/>
                </div>
            </div>
        </template>

        <!--        Affiche le détail d'une agence -->
        <template id="cap_levage_portal.agence_detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <div class="panel">
                    <div class="row">
                        <t t-call="cap_levage_portal.agence_toolbar"/>
                    </div>
                    <h3>Adresse de livraison</h3>
                    <div class="row">
                        <div class="col-2">
                            <span t-field="agence.parent_id.image_1920" t-options="{'widget': 'image'}"/>
                        </div>
                        <div class="col-5">
                            <t t-call="cap_levage_portal.agence_champs_col_1"/>
                        </div>
                        <div class="col-5">
                            <t t-call="cap_levage_portal.agence_champs_col_2"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <a href="/cap_levage_portal/materiels" class="btn btn-primary"
                               aria-label="Mes matériels" title="Mes matériels">
                                <i class="fa fa-wrench"/>
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <template id="cap_levage_portal.equipe_toolbar">
            <div class="col-8"/>
            <div class="col-1">
                <a t-att-href="'/cap_levage_portal/equipe/edit/' + str(equipe.id)" class="btn btn-secondary"
                   aria-label="Editer" title="Editer">
                    <i class="fa fa-pencil"/>
                </a>
            </div>
            <div class="col-1">
                <a href="/cap_levage_portal/materiels" class="btn btn-secondary"
                   aria-label="Archiver" title="Archiver">
                    <i class="fa fa-trash"/>
                </a>
            </div>
        </template>
        <template id="cap_levage_portal.equipe_champs_col_1">
            <div class="col-12">
                <div class="row">
                    <label>Nom :</label>
                    <a t-field="equipe.name"/>
                </div>
                <div class="row">
                    <label>Titre :</label>
                    <a t-field="equipe.title"/>
                </div>
                <div class="row">
                    <label>Poste occupé :</label>
                    <a t-field="equipe.function"/>
                </div>
                <div class="row">
                    <label>Notes :</label>
                    <a t-field="equipe.comment"/>
                </div>
            </div>
        </template>
        <template id="cap_levage_portal.equipe_champs_col_2">
            <div class="col-12">
                <div class="row">
                    <label>Email :</label>
                    <a t-field="equipe.email"/>
                </div>
                <div class="row">
                    <label>Téléphone :</label>
                    <a t-field="equipe.phone"/>
                </div>
                <div class="row">
                    <label>Mobile :</label>
                    <a t-field="equipe.mobile"/>
                </div>
            </div>
        </template>
        <!--        Affiche le détail d'une equipe -->
        <template id="cap_levage_portal.equipe_detail">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <div class="panel">
                    <div class="row">
                        <t t-call="cap_levage_portal.equipe_toolbar"/>
                    </div>
                    <h3>Contact</h3>
                    <div class="row">
                        <div class="col-2">
                            <span t-field="equipe.image_128" t-options="{'widget': 'image'}"/>
                        </div>
                        <div class="col-5">
                            <t t-call="cap_levage_portal.equipe_champs_col_1"/>
                        </div>
                        <div class="col-5">
                            <t t-call="cap_levage_portal.equipe_champs_col_2"/>
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-12 text-right">
                            <a href="/cap_levage_portal/materiels" class="btn btn-primary"
                               aria-label="Mes matériels" title="Mes matériels">
                                <i class="fa fa-wrench"/>
                            </a>
                        </div>
                    </div>
                </div>
            </t>
        </template>


        <template id="assets_frontend" inherit_id="website.assets_frontend">
           <xpath expr="." position="inside">
               <script type="text/javascript" src="/cap_levage_portal/static/src/js/avatarUpload.js"/>
           </xpath>
        </template>
        <template id="cap_levage_portal.equipe_edit">
            <t t-call="portal.portal_layout">
                <t t-set="title">Cap-levage</t>
                <form id="equipe_edit_form" method="POST" enctype="multipart/form-data" t-attf-action="/cap_levage_portal/equipe/edit/#{equipe.id}">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    <div class="panel">
                        <div class="row">
                            <t t-call="cap_levage_portal.equipe_toolbar"/>
                        </div>
                        <h3>Contact</h3>
                        <div class="row">
                            <div class="col-2" id="cap_levage_portal_avatar">
                                <input type="file" accept="image/*" name="image_1920" t-options="{'widget': 'image'}"
                                       class="d-none cap_levage_portal_avatar_upload"/>
                                <img class="mb-3 cap_levage_portal_avatar_img" t-att-src="website.image_url(equipe, 'image_128')"
                                     style="object-fit: cover; border-radius: 50%; width: 128px; height: 128px;"/>
                                <div class="text-left">
                                    <a href="#" class="btn btn-primary cap_levage_portal_avatar_edit" aria-label="Edit">
                                        <i class="fa fa-pencil fa-1g float-sm-none float-md-left" title="Edit"/>
                                    </a>
                                    <a href="#" title="Clear" aria-label="Clear" class="btn border-primary cap_levage_portal_avatar_clear">
                                        <i class="fa fa-trash-o float-sm-none float-md-right"/>
                                    </a>
                                </div>
                            </div>
                            <div class="col-5">
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="name">Name</label>
                                    <input type="text" name="name" t-attf-class="form-control" t-att-value="equipe.name"/>
                                </div>
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="title_id">Titre</label>
                                    <select name="title" t-attf-class="form-control">
                                        <option value="">Titre...</option>
                                        <t t-foreach="titles or []" t-as="title">
                                            <option t-att-value="title.id"
                                                    t-att-selected="title.id == equipe.title.id">
                                                <t t-esc="title.name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="function">Poste occupé</label>
                                    <input name="function" t-attf-class="form-control" t-att-value="equipe.function"/>
                                </div>
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="comment">Notes</label>
                                    <input type="text" name="comment" t-attf-class="form-control" t-att-value="equipe.comment"/>
                                </div>
                            </div>
                            <div class="col-5">
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="email">Email</label>
                                    <input type="email" name="email" t-attf-class="form-control" t-att-value="equipe.email"/>
                                </div>
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="phone">Téléphone</label>
                                    <input type="tel" name="phone" t-attf-class="form-control" t-att-value="equipe.phone"/>
                                </div>
                                <div t-attf-class="form-group col-12">
                                    <label class="col-form-label" for="mobile">Mobile</label>
                                    <input type="tel" name="mobile" t-attf-class="form-control" t-att-value="equipe.mobile"/>
                                </div>
                            </div>
                        </div>
                        <div class="clearfix">
                            <button type="submit" t-att-id="equipe.id" class="btn btn-primary">
                                <i class="fa fa-save"/>
                            </button>
                            <a t-att-href="'/cap_levage_portal/equipe/detail/' + str(equipe.id)" class="btn btn-danger"
                               aria-label="Annuler" title="Annuler">
                                <span class="fa fa-ban"/>
                            </a>
                        </div>
                    </div>
                </form>
            </t>
        </template>
    </data>
</odoo>
